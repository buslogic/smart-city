# Production Environment Configuration
# VAÅ½NO: Popuniti sa stvarnim produkcijskim vrednostima pre deployment-a

# Database - DigitalOcean Managed MySQL
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# Redis - DigitalOcean Managed Redis
REDIS_HOST=your-redis-host.db.ondigitalocean.com
REDIS_PORT=25061
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# API Configuration
PORT=3010
NODE_ENV=production

# JWT Secrets - MORA se promeniti!
JWT_SECRET=GENERATE_STRONG_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_STRONG_SECRET_HERE
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS - Production domains
CORS_ORIGINS=https://admin.smart-city.rs,https://app.smart-city.rs

# Logging
LOG_LEVEL=info

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DESTINATION=/app/uploads

# Email Service (optional)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@smart-city.rs

# External APIs (optional)
MAPBOX_TOKEN=your-mapbox-token
OPENWEATHER_API_KEY=your-openweather-key

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key