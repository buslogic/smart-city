{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "projectName": "Smart City Platform",
  "description": "Projekat-specifična konfiguracija za Smart City",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/mysql-guard-hook.sh \"$COMMAND\"",
            "description": "Blokira direktne MySQL/PostgreSQL upise"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/prisma-guard-hook.sh \"$COMMAND\"",
            "description": "Blokira prisma migrate dev"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/curl-login-guard-hook.sh \"$COMMAND\"",
            "description": "Rešava ! u passwordu"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/claude-files-guard-hook.sh \"$COMMAND\"",
            "description": "Preusmerava claude fajlove"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/git-ssh-guard-hook.sh \"$COMMAND\"",
            "description": "Forsira SSH ključ"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/after-compact-hook.sh",
            "description": "Auto-učitava claude fajlove"
          }
        ]
      }
    ]
  }
}