{
  "name": "smart-city",
  "version": "1.0.0",
  "description": "Smart City Platform - Multi-application monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:admin": "cd apps/admin-portal && npm run dev",
    "dev:dashboard": "cd apps/dashboard-portal && npm run dev",
    "dev:mobile": "cd apps/mobile && npx expo start",
    "install:all": "npm install && cd apps/backend && npm install && cd ../admin-portal && npm install",
    "docker:up": "docker-compose -f docker-compose.local.yml up -d",
    "docker:down": "docker-compose -f docker-compose.local.yml down",
    "docker:logs": "docker-compose -f docker-compose.local.yml logs -f",
    "db:migrate": "cd apps/backend && npx prisma migrate dev",
    "db:seed": "cd apps/backend && npx prisma db seed",
    "db:studio": "cd apps/backend && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "keywords": [
    "smart-city",
    "monorepo",
    "nestjs",
    "react",
    "react-native",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "pg": "^8.16.3"
  }
}
